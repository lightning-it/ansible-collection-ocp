---
apiVersion: v1beta1
kind: AgentConfig
metadata:
  name: {{ cluster_id }}
rendezvousIP: {{ lookup('dig',groups['control'][0]) }}
{% if ocp_install_ntp_servers is defined %}
AdditionalNTPSources: {{ ocp_install_ntp_servers | map(attribute='hostname') | list }}
{% endif %}
hosts:
{% for node in ocp_install_create_vms_agent_based_vminfo %}
  - hostname: {{ node.item  }}
{% if 'control' in node.item or "etc" in node.item %}
    role: master
{% else %}
    role: worker
{% endif %}
    interfaces:
    - name: {{ ocp_install_ifname }}
      macAddress: {{ node.instance.hw_eth0.macaddress }}
    networkConfig:
      interfaces:
      - name: {{ ocp_install_ifname }}
        type: ethernet
        state: up
        ipv4:
          enabled: true
          address:
            - ip: {{ lookup('dig', node.item) }}
              prefix-length: {{ ocp_install_netmask_prefix }}
          dhcp: false
        ipv6:
          enabled: false
      dns-resolver:
        config:
          server: {{ ocp_install_dns_servers }}
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: {{ ocp_install_gateway }}
            next-hop-interface: {{ ocp_install_ifname }}
{% endfor %}
